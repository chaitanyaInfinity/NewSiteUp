<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android" >


    <ImageView
        android:id="@+id/img_check_stop"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/view_line"
        android:src="@drawable/completed_green"
        />

    <TextView
        android:id="@+id/tv_step_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/img_check_stop"
        android:layout_alignTop="@id/img_check_stop"
        android:textColor="@color/dark_gray"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/tv_step_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_below="@id/tv_step_name"
        android:layout_alignStart="@id/tv_step_name"
        android:textSize="15sp"
        android:textColor="@color/blue_logo_name"
        />

    <View
        android:id="@+id/view_line"
        android:layout_width="1dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:background="@color/dark_gray"
        />

</RelativeLayout>