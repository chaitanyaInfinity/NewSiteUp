<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_listview_background"
    android:gravity="center"
    android:orientation="horizontal"
    android:weightSum="1">

    <RelativeLayout android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android" >


        <ImageView
            android:id="@+id/img_check_stop"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/view_line_top"
            />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/img_check_stop"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/tv_step_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/dark_gray"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/tv_step_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="@color/blue_logo_name"
                />

        </LinearLayout>



        <View
            android:id="@+id/view_line_top"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:background="@color/dark_gray"
            />


        <View
            android:id="@+id/view_line_bottom"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@id/img_check_stop"
            android:background="@color/dark_gray"
            />


    </RelativeLayout>


    <ImageView
        android:id="@+id/img_arrow_enter"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="invisible"
        android:src="@drawable/arrow" />


</LinearLayout>